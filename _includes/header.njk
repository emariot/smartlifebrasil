<header class="bg-white shadow-md px-4 flex justify-between items-center h-16">
  <div class="flex items-center space-x-3 h-full">
    <img src="/assets/img/mascote.png" 
         alt="Mascote Smart Life Brasil" 
         class="max-h-full w-auto object-contain hover:scale-105 transition-transform duration-300">

    <h1 class="font-bold leading-tight text-2xl">
      <span class="text-black">Smart Life</span> 
      <span class="text-emerald-600 italic">Brasil</span>
    </h1>
  </div>

  <nav>
    <ul class="hidden md:flex space-x-6">
      <li><a href="/" class="text-gray-700 hover:text-blue-500">Início</a></li>
      <li><a href="/sobre/" class="text-gray-700 hover:text-blue-500">Sobre</a></li>
      <li><a href="/contato/" class="text-gray-700 hover:text-blue-500">Contato</a></li>
    </ul>
    <button class="md:hidden text-gray-700 focus:outline-none" id="menu-btn">☰</button>
  </nav>
</header>

<script>
  // Menu mobile
  const menuBtn = document.getElementById('menu-btn');
  const navList = document.querySelector('header nav ul');
  
  if (menuBtn && navList) {
    menuBtn.addEventListener('click', () => {
      navList.classList.toggle('hidden');
      menuBtn.textContent = navList.classList.contains('hidden') ? '☰' : '✕';
    });
  }
</script>